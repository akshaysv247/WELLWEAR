                                    <div class="date-range-report">
                                        <span></span>
                                    </div>
                                </div>

                                <div class="card-body pt-0 pb-5">
                                    <table class="table card-table table-responsive table-responsive-large"
                                        style="width:100%;" id="mytable_id">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Customer</th>
                                                <th>Email</th>
                                                <th>Items</th>
                                                <th>Price</th>
                                                <th>Payment</th>
                                                <th>Status</th>
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <% for(let i=0;i<allOrders.length;i++) { %>
                                                <tr>
                                                    <td>##</td>
                                                    <td>
                                                        <%= userDet[i].userId.username %>
                                                    </td>
                                                    <td>
                                                        <%= userDet[i].userId.email %>
                                                    </td>
                                                    <td>
                                                        <%= quantityItem[i].productsTotal %>
                                                    </td>
                                                    <td>
                                                        <%= allOrders[i].total %>$
                                                    </td>
                                                    <td>
                                                        <%= allOrders[i].paymentMethod %>
                                                    </td>
                                                    <% if(allOrders[i].status=='Placed' ){ %>
                                                        <td><span class="mb-2 mr-2 badge badge-warning"
                                                                id="status-area<%= allOrders[i]._id %>">
                                                                <%= allOrders[i].status %>
                                                            </span></td>
                                                        <% }else if(allOrders[i].status=='Cancelled' ){ %>
                                                            <td><span class="mb-2 mr-2 badge badge-danger"
                                                                    id="status-area<%= allOrders[i]._id %>">
                                                                    <%= allOrders[i].status %>
                                                                </span></td>
                                                            <% }else if(allOrders[i].status=='Confirmed Order' ){ %>
                                                                <td><span class="mb-2 mr-2 badge badge-secondary"
                                                                        id="status-area<%= allOrders[i]._id %>">
                                                                        <%= allOrders[i].status %>
                                                                    </span></td>
                                                                <% }else if(allOrders[i].status=='Processing Order' ){%>
                                                                    <td><span class="mb-2 mr-2 badge badge-primary"
                                                                            id="status-area<%= allOrders[i]._id %>">
                                                                            <%= allOrders[i].status %>
                                                                        </span></td>
                                                                    <% }else if(allOrders[i].status=='On Delivery' ){ %>
                                                                        <td><span class="mb-2 mr-2 badge badge-info"
                                                                                id="status-area<%= allOrders[i]._id %>">
                                                                                <%= allOrders[i].status %>
                                                                            </span></td>
                                                                        <% }else if(allOrders[i].status=='Delivered'){%>
                                                                            <td><span
                                                                                    class="mb-2 mr-2 badge badge-success"
                                                                                    id="status-area<%= allOrders[i]._id %>">
                                                                                    <%= allOrders[i].status %>
                                                                                </span></td>
                                                                            <% }else{ %>
                                                                                <td><span
                                                                                        class="mb-2 mr-2 badge badge-secondary"
                                                                                        id="status-area<%= allOrders[i]._id %>">
                                                                                        <%= allOrders[i].status %>
                                                                                    </span></td>
                                                                                <% } %>
                                                                                    <td>
                                                                                        <%=allOrders[i].purchaseDate.toLocaleDateString()%>
                                                                                    </td>
                                                                                    <td>
                                                                                        <div class="btn-group mb-1">
                                                                                            <button type="button"
                                                                                                class="btn btn-outline-success">Info</button>
                                                                                            <button type="button"
                                                                                                class="btn btn-outline-success dropdown-toggle dropdown-toggle-split"
                                                                                                data-bs-toggle="dropdown"
                                                                                                aria-haspopup="true"
                                                                                                aria-expanded="false"
                                                                                                data-display="static">
                                                                                                <span
                                                                                                    class="sr-only">Info</span>
                                                                                            </button>

                                                                                            <div class="dropdown-menu">
                                                                                                <a class="dropdown-item"
                                                                                                    href="/admin/order-details?id=<%= allOrders[i]._id %>">Detail</a>
                                                                                                <a class="dropdown-item"
                                                                                                    onclick="cancelOrder('<%= allOrders[i]._id %>')">Cancel</a>
                                                                                            </div>
                                                                                        </div>
                                                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
