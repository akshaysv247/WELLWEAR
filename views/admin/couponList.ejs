<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="WEARWELL - ADMIN PANEL.">

    <title>WEARWELL- ADMIN PANEL.</title>

    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800;900&family=Roboto:wght@400;500;700;900&display=swap"
        rel="stylesheet">

    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet" />

    <!-- PLUGINS CSS STYLE -->
    <link href="/assets/plugins/simplebar/simplebar.css" rel="stylesheet" />

    <!-- Data Tables -->
    <link href='/assets/plugins/data-tables/datatables.bootstrap5.min.css' rel='stylesheet'>
    <link href='/assets/plugins/data-tables/responsive.datatables.min.css' rel='stylesheet'>

    <!-- ekka CSS -->
    <link id="ekka-css" rel="stylesheet" href="/Stylesheets/ekka.css" />

    <!-- FAVICON -->
    <link href="/assets/img/favicon.png" rel="shortcut icon" />
</head>

<body class="ec-header-fixed ec-sidebar-fixed ec-sidebar-dark ec-header-light" id="body">

    <!-- WRAPPER -->
    <div class="wrapper">

        <!-- LEFT MAIN SIDEBAR -->
        <%- include('partials/admin-sidebar.ejs') %>

            <!-- PAGE WRAPPER -->
            <div class="ec-page-wrapper">

                <!-- Header -->

                <%- include('partials/admin-header.ejs') %>

                    <div class="ec-content-wrapper">
                        <div class="content ">
                            <div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
                                <h1>Coupons</h1>
                                <p class="breadcrumbs"><span><a href="/admin/index">Home</a></span>
                                    <span><i class="mdi mdi-chevron-right"></i></span>Coupon List
                                </p>
                            </div>
                            <div class="row">
                                <div class="col-10 ">
                                    <div class="ec-cat-list card card-default mb-24px">
                                        <div class="card-body">
                                            <div class="ec-cat-form">
                                                <h4>Coupon List</h4>

                                                
                                                <div class="col-md-12">
                                                    <h2>Available Coupons</h2>
                                                </div>

                                                <div class="col-md-12">

                                                    <!-- <div class="form-group row filter-history no-gutters">

                                                        <div class="col-sm-4 offset-8 form-group float-right">

                                                            <select class="custom-select">
                                                                <option value="1" selected>All</option>
                                                                <option value="2">Claimed</option>
                                                                <option value="3">Active</option>
                                                            </select>
                                                        </div>
                                                    </div> -->


                                                    <table class="table table-stripe">
                                                        <thead class="thead-secondary">
                                                            <tr>
                                                                <th>Code</th>
                                                                <th>Coupon Name</th>
                                                                <th>Discription</th>
                                                                <th>Discount</th>
                                                                <th>Expire Date</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% coupons.forEach(element => { %> 
                                                            <tr>
                                                                <td><%= element.code%> </td>
                                                                <td><%= element.name %> </td>
                                                                <td><%= element.description %> </td>
                                                                <td><%= element.percentage %>% </td>
                                                                <td><%= element.expireDate.toLocaleDateString() %> </td>
                                                                <td><a href="/admin/delete-coupon?id=<%= element._id %>" class="btn btn-outline-danger">DELETE COUPON</a></td>
                                                            </tr>
                                                            <%  }); %> 
                                                        </tbody>
                                                    </table>

                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <!-- Footer -->
                            <!-- <footer class="footer mt-auto">
                                <div class="copyright bg-white">
                                    <p>
                                        Copyright &copy; <span id="ec-year"></span><a class="text-primary"
                                            href="https://themeforest.net/user/ashishmaraviya" target="_blank">
                                            WEARWELL Admin Dashboard</a>. All Rights Reserved.
                                    </p>
                                </div>
                            </footer> -->

                        </div> <!-- End Page Wrapper -->

                    </div> <!-- End Wrapper -->

                    <!-- Common Javascript -->
                    <script src="/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
                    <script src="/assets/plugins/jquery/jquery.notify.min.js"></script>
                    <script src="/assets/plugins/jquery/jquery.bundle.notify.min.js"></script>
                    <script src="/assets/js/bootstrap.bundle.min.js"></script>
                    <script src="/assets/plugins/tags-input/bootstrap-tagsinput.js"></script>
                    <script src="/assets/plugins/simplebar/simplebar.min.js"></script>
                    <script src="/assets/plugins/jquery-zoom/jquery.zoom.min.js"></script>
                    <script src="/assets/plugins/slick/slick.min.js"></script>

                    <!-- Data Tables -->
                    <script src='/assets/plugins/data-tables/jquery.datatables.min.js'></script>
                    <script src='/assets/plugins/data-tables/datatables.bootstrap5.min.js'></script>
                    <script src='/assets/plugins/data-tables/datatables.responsive.min.js'></script>

                    <!-- Option Switcher -->
                    <script src="/assets/plugins/options-sidebar/optionswitcher.js"></script>

                    <!-- Ekka Custom -->
                    <script src="/assets/js/ekka.js"></script>
</body>

</html>