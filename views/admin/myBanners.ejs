<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="WEARWELL- ADMIN PANEL.">

    <title>WEARWELL - ADMIN PANEL.</title>

    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800;900&family=Roboto:wght@400;500;700;900&display=swap"
        rel="stylesheet">

    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet" />

    <!-- Ekka CSS -->
    <link id="ekka-css" rel="stylesheet" href="/stylesheets/ekka.css" />

    <!-- FAVICON -->
    <link href="/assets/img/favicon.png" rel="shortcut icon" />
</head>

<body>
    <!-- WRAPPER -->
    <div class="wrapper">

        <!-- LEFT MAIN SIDEBAR -->
        <%- include('partials/admin-sidebar.ejs') %>

            <!-- PAGE WRAPPER -->
            <div class="ec-page-wrapper">

                <!-- Header -->
                <%- include('partials/admin-header.ejs') %>
                    <div class="ec-content-wrapper">
                        <div class="content ">
                            <div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
                                <h1>Coupons</h1>
                                <p class="breadcrumbs"><span><a href="/admin/index">Home</a></span>
                                    <span><i class="mdi mdi-chevron-right"></i></span>Banners
                                </p>
                            </div>
                            <div class="row">
                                <div class="col-10 ">
                                    <div class="ec-cat-list card card-default mb-24px">
                                        <div class="card-body">
                                            <div class="ec-cat-form">
                                               <!-- <div class="d-flex justify-content-space-between"> -->
                                                <div><h4>Banners</h4></div>
                                                <div class="d-flex justify-content-center"><a href="/admin/new-banner"><button class="btn btn-primary">Add Banner</button></a></div>
                                            <!-- </div>  -->
                                                


                                                <!-- <div class="col-md-12">
                                                    <h2>Banners</h2>
                                                </div> -->

                                                <div class="col-md-12">
                                                    <table class="table table-stripe">
                                                        <thead class="thead-secondary">
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Banners</th>
                                                                <th>Discription</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% banners.forEach(elements=>{ %> 
                                                            <tr id="banner-row<%= elements._id%>">
                                                            <td>*</td>
                                                            <td><img style="width:80px; height:auto;" src="/bannerImg/<%= elements.thumbnail %>"</td>
                                                            <td class="pt-5"><%= elements.description %> </td>
                                                            <td class="pt-5"><button onclick="deleteBanner('<%= elements._id %>')" class="btn btn-outline-primary">Delete</button></td>
                                                            </tr>
                                                            <% }) %> 
                                                        </tbody>
                                                    </table>

                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div> 
                    </div>
                    <script>
                        function deleteBanner(id){
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "You won't be able to revert this!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, delete it!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $.ajax({
                                        url:`/admin/delete-banner?id=${id}`,
                                        method:'patch',
                                        data:{id},
                                        success:(response)=>{
                                            if(response.status){
                                                $('#banner-row'+id).remove()
                                            }
                                        }
                                    })
                                    Swal.fire(
                                        'Deleted!',
                                        'Your file has been deleted.',
                                        'success'
                                    )
                                }
                            })
                        }
                    </script>
                    <!-- Javascript -->
                    <script src="/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
                    <script src="/assets/plugins/jquery/jquery.notify.min.js"></script>
                    <script src="/assets/plugins/jquery/jquery.bundle.notify.min.js"></script>
                    <script src="/assets/js/bootstrap.bundle.min.js"></script>
                    <script src="/assets/plugins/jquery-zoom/jquery.zoom.min.js"></script>
                    <script src="/assets/plugins/slick/slick.min.js"></script>
                    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


                    <!-- Ekka Custom -->
                    <script src="/assets/js/ekka.js"></script>
</body>

</html>