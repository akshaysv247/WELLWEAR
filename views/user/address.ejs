<div class="row d-flex justify-content-center">
    <div class="col-md-8 mb-4" >
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Address details</h5>
            </div>
            <div class="card-body">
                <form action="/adding-address" method="Post">
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">First name</label>
                                <input type="text" name="firstName" id="form7Example1" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example2">Last name</label>
                                <input type="text" name="lastName" id="form7Example2" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">Place</label>
                                <input type="text" name="place" id="form7Example1" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example2">PIN code</label>
                                <input type="text" name="pinCode" id="form7Example2" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">House No:/flat.No:</label>
                                <input type="text" name="houseNo" id="form7Example1" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example2">LandMark</label>
                                <input type="text" name="landMark" id="form7Example2" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">Country</label>
                                <input type="text" name="country" id="form7Example1" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example2">State</label>
                                <input type="text" name="state" id="form7Example2" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form7Example5">Email</label>
                        <input type="email" name="Email" id="form7Example5" class="form-control" />
                    </div>

                    <!-- Number input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form7Example6">Phone</label>
                        <input type="phone" name="phone" id="form7Example6" class="form-control" />
                    </div>
                    <% if(message){ %>
                        <p style="color:red">
                            <%= message %> !
                        </p>
                        <% } %>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-danger" type="submit">ADD ADDRESS</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>


</div>

