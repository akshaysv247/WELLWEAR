    <body>


<%- include('partials/user-navbar2.ejs') %>



    <div class="container ">
        <div class="row d-flex justify-content-around">
        <% coupon.forEach(element => { %> 
        <div class="coupon-card" style="width:500px;height:auto;">
            <h3><%= element.description %> </h3>
            <di class="coupon-row">
                <span id="cpnCode<%= element._id %>"><%= element.code %> </span>
                <span id="cpnBtn<%= element._id %>" onclick="couponCopy('<%= element._id %>')" style="color: rgba(255, 255, 255, 0.64); padding-left: 10px; cursor: pointer;">Copy Code</span>
            </di>
            <p style="color:rgba(255, 255, 255, 0.582);">Valid Till:<%= element.expireDate.toLocaleDateString()%></p>
            <div class="circle1"></div>
            <div class="circle2"></div>
        </div>
        <% }); %> 
        </div>
    </div>

    <div>
        <hr>
    </div>

<%- include('partials/user-footer.ejs') %>

<script>
    
    function couponCopy(id) {
        var cpnBtn = document.getElementById("cpnBtn"+id);
        var cpnCode = document.getElementById("cpnCode"+id);
        navigator.clipboard.writeText(cpnCode.innerHTML);
        cpnBtn.innerHTML = "COPIED";
        setTimeout(function () {
            cpnBtn.innerHTML = "COPY CODE";
        }, 3000);
    }
</script>
